{% include 'Small Header' %}

<div class="center-content center-content--accomodates-stuck-footer">
  <div class="center-content__big-column">

    <div class="body-text main-feature">
      {{ content }}

      {% unless link_list == blank %}
        <hr class="stubby-hr" />
        <h3>{{ 'page.more_info' | t }}</h3>
        {% include 'Links' %}
      {% endunless %}
    </div>
  </div>
  <div class="center-content__fixed-right">
    {% include 'Fundraiser', extra_class: 'stuck-right not-sticky overlay-toggle' %}
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    window.sumofus.mySticky = new window.sumofus.DesktopSticky({extraClass: 'fundraiser'});
    $.subscribe('fundraiser:transaction_success', function(event, responseData, formData) {
      console.log("here");
      var followUpUrl = responseData.follow_up_url || "{{ follow_up_url }}"
      window.champaign.redirectors.AfterDonationRedirector.attemptRedirect(followUpUrl, formData)
    });
  });
</script>

